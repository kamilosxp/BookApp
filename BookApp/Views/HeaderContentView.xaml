<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             HeightRequest="170"
             x:Class="BookApp.Views.HeaderContentView"
             xmlns:helpers="clr-namespace:BookApp.Helpers;assembly=BookApp">

    <ContentView.Content>
            <StackLayout>
                <Image Source="{helpers:ImageResource BookApp.Assets.Images.header_background.jpeg}" />
                <Image HorizontalOptions="Center" WidthRequest="300" HeightRequest="100" Source="{helpers:ImageResource BookApp.Assets.Images.logoWhite.png}" />
                <Label Text="WypożyczKsiążkę" HorizontalOptions="Center" FontSize="Medium"></Label>
            </StackLayout>
    </ContentView.Content>
</ContentView>